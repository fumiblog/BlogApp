<div class="container">
  <div class="row">

    <marquee>
      <% @blogs.each do |blog| %>
        <%= link_to blog do %>
          <span><%= blog.title %>　/　</span>
        <% end %>
      <% end %>  
    </marquee>

    <div class="col-md-7">
    <h3>Blogs</h3>
    <% @blogs.each do |blog| %>
      <%= link_to blog do %>
        <div class="card mb-3" style="max-width: 600px;">
          <div class="row g-0">
            <div class="col-md-4">
              <%= attachment_image_tag blog, :image, format: 'jpg', fallback: "no_image.jpg", size: "150x150" %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text"><%= blog.summary %></p>
                <p class="card-text"><small class="text-muted"><%= blog.created_at.strftime('%Y-%m-%d') %></small>　更新<small class="text-muted"><%= blog.updated_at.strftime('%Y-%m-%d') %></small></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    </div>
      <div class="col-md-5">
      <h3>Category</h3>
        <table class="table table-striped">
          <tr>
            <th>カテゴリ</th>
          </tr>
          <% @categories.each do |category| %>
          <tr>
            <td><%= link_to category.name, root_path(:category_id => category.id) %>[ <%= category.blogs.count.to_i %>記事 ]</td>
          </tr>
          <% end %>
        </table>
        <div class="profile">
          <p>Profile</p>
          <p>
            Today:
          　<%= Date.current.strftime('%Y年%m月%d日') %>（<%= Time.now.strftime("%A") %>）
          </p>
          <% @footprints.each do |footprint| %>
            <p>
              <%= footprint.date.strftime('%Y年%m月%d日') %>：
              <%= footprint.title %>　
              <% if Date.current - footprint.date <= 30 %>
                <%= (Date.current - footprint.date).to_i %>日経過
              <% else %>
                <%= (Date.current - footprint.date).to_i / 365 %>年
                <%= (Date.current - footprint.date).to_i % 365 / 30 %>ヶ月経過
              <% end %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
    
 