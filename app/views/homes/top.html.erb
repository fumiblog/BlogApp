<div class="container">
  <div class="row_top">
    <h1>
      <%= Date.current.strftime('%Y年%m月%d日') %>
      （<%= Time.now.strftime("%A") %>）  →　
      <%= @elapsed_date %>日経過
    </h1>
  </div>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @blogs.each do |blog| %>
      <div class="col">
        <div class="card h-100">
          <a class="card-img-top">
            <%= attachment_image_tag @blog, :image, format: 'jpg', fallback: "no_image.jpg", size: "50x50" %>
          </a>
          <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text"><%= blog.summary %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
